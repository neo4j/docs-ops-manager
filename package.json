{
  "name": "ops-manager",
  "version": "1.0.0",
  "description": "= Neo4j Ops manager",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run build && npm run serve & npm-watch build",
    "serve": "node server.js",
    "build": "antora --stacktrace preview.yml --log-format=pretty",
    "lint": "node scripts/lint-links.js",
    "apoc": "node scripts/apoc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neo4j/docs-ops-manager.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/neo4j/docs-ops-manager/issues"
  },
  "homepage": "https://github.com/neo4j/docs-ops-manager#readme",
  "dependencies": {
    "@antora/cli": "^3.0.0",
    "@antora/site-generator-default": "^3.0.0",
    "@neo4j-antora/antora-add-notes": "^0.3.0",
    "@neo4j-antora/antora-table-footnotes": "^0.3.0",
    "@neo4j-documentation/macros": "^1.0.0",
    "@neo4j-documentation/remote-include": "^1.0.0"
  },
  "watch": {
    "build": {
      "patterns": [
        "modules"
      ],
      "extensions": "adoc"
    }
  },
  "devDependencies": {
    "cheerio": "^1.0.0-rc.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "hyperlink": "^4.6.0",
    "npm-watch": "^0.6.0"
  }
}
